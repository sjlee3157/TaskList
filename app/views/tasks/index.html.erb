<ol>
  <% @tasks.each do |task| %>
  <li><%= link_to "#{task.name}", task_path(task.id) %></li>
    <ul>
      <li><%= "#{task.description}" %></li>
      <li>
        <% task_status = task.completion_date %>
        <% task_status ||= :incomplete %>
        <%= "#{task_status}" %></li>
    </ul>
  <% end %>
</ol>

