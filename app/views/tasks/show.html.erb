<% if @task.nil? %>
  <h1> 404 Not found</h1>
<% else %>
<!-- Can I get this to show the task list number? -->
  <h2><%= @task.name %></h2>
  <p><%= @task.description %></p>
  <p><%= link_to "Edit Task", edit_task_path %></p>
  <p><%= link_to "Delete Task", task_path(@task.id), method: :delete %></p>
  <p><%= link_to "Back to Tasks", root_path %></p>
<% end %>



